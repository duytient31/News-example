<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="@dimen/base_layout_padding">

    <TextView
        android:id="@+id/textView_news_title"
        style="@style/newsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Headline" />

    <TextView
        android:id="@+id/textView_news_description"
        style="@style/newsDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="This is some text where news content will be displayed" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_news_time"
            style="@style/newsPublishTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/published_ago_by" />

        <TextView
            android:id="@+id/textView_news_source"
            style="@style/newsPublishSource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_ultra_small"
            tools:text="The New York Times" />
    </LinearLayout>
</LinearLayout>