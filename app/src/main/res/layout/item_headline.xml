<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/colorGray100"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/base_layout_padding">

    <ImageView
        android:id="@+id/imageView_headline_photo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_headline_height"
        tools:src="@drawable/ic_logo" />

    <TextView
        android:id="@+id/textView_headline_title"
        style="@style/newsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/spacing_small"
        tools:text="Headline" />

    <TextView
        android:id="@+id/textView_headline_source"
        style="@style/newsPublishSource"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/spacing_ultra_small"
        android:paddingTop="@dimen/spacing_ultra_small"
        tools:text="bbc.com" />

    <TextView
        android:id="@+id/textView_headline_time"
        style="@style/newsPublishTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/published_ago" />

</LinearLayout>