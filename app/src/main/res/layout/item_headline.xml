<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorGray100"
    android:orientation="vertical"
    android:padding="@dimen/base_layout_padding">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView_headline_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:src="@drawable/ic_logo" />

        <ImageView
            android:id="@+id/imageView_headline_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:padding="@dimen/spacing_small"
            tools:src="@mipmap/ic_launcher" />
    </FrameLayout>

    <TextView
        android:id="@+id/textView_headline_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="@dimen/textview_H1_size"
        android:textStyle="bold"
        tools:text="Headline" />

    <TextView
        android:id="@+id/textView_headline_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPurple"
        android:textSize="@dimen/textview_H5_size"
        tools:text="bbc.com" />

    <TextView
        android:id="@+id/textView_headline_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorGray500"
        android:textSize="@dimen/textview_H5_size"
        tools:text="2 hours ago" />

</LinearLayout>